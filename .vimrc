" Enable syntax processing
syntax on

" Number of spaces per tab
set tabstop=4

" Number of spaces in tab when editing
set softtabstop=4

" Number of spaces indented with reindent operations
set shiftwidth=4 

" Tabs insert spaces
set expandtab

" Search as characters are entered while searching
set incsearch

" Highlight search matches
set hlsearch

" Enable mouse support
set mouse=a

" Show line numbers
set number

" Change foreground color of line numbers
highlight LineNr ctermfg=darkgray
